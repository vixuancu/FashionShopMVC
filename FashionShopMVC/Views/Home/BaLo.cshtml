@{
    ViewData["Title"] = "Ba Lô";
}


@model List<Product>

<div class="mt-4 mx-3">
    <span class="d-block text-center">
        <h2>Balo</h2>
    </span>
    <div class="row mt-5">
        @foreach (var product in Model)
        {
            <div class="col-10 col-sm-6 col-md-4 col-lg-3 mb-4 mobile-center">
                <!-- Responsive Grid -->
                <div class="card">
                    <a href="/Home/Details/@product.Id">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                    </a>
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Price đ</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

