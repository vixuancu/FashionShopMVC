@model List<FashionShopMVC.Models.Order>

<h2 class="mt-4">Lịch sử đặt hàng</h2>

@if (Model.Count == 0)
{
    <p>Bạn chưa có đơn hàng nào.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tổng tiền</th>
                <th>Trạng thái</th>
                <th>Ngày đặt</th>
                <th>Chi tiết đơn hàng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.TotalPrice.ToString("N0") đ</td>
                    <td>@order.Status</td>
                    <td>@order.CreatedAt.ToString("dd/MM/yyyy")</td>
                    <td>
                        <ul>
                            @foreach (var detail in order.OrderDetails)
                            {
                                <li>@detail.Product.Name - Số lượng: @detail.Quantity - Giá: @detail.Price.ToString("N0") đ</li>
                            }
                        </ul>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

